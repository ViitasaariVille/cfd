type            forceCoeffs;
libs            ("libforces.so");

writeControl    timeStep;
timeInterval    1;

log             yes;

// Replace with your wing patches from snappyHexMesh
patches         (motorBikeGroup);

rho             rhoInf;        // incompressible solvers use rhoInf
rhoInf          1.225;         // [kg/m3] air at sea level

// Coordinate system
liftDir         (0 0 1);       // lift = +z
dragDir         (1 0 0);       // drag = +x (freestream)
pitchAxis       (0 1 0);       // pitching moment about spanwise axis (y)

// Moment reference point (set to CG or quarter-chord midpoint)
CofR            (0 0 0);

// Flow and reference values
magUInf         20;            // freestream velocity [m/s]
lRef            1.2;           // [m] wing span
Aref            0.24;          // [m^2] <-- set this to your wing planform area

